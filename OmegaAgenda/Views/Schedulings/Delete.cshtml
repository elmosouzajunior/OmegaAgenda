@model OmegaAgenda.Models.Scheduling

@{
    ViewData["Title"] = "Excluir Agendamento";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza que deseja excluir este agendamento?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Profissional:</dt>
        <dd>
            @Html.DisplayFor(model => model.Professional.Name)
        </dd>
        <dt>Cliente:</dt>
        <dd>
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
        <dt>Data:</dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>Horário de Início:</dt>
        <dd>
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt>Horário do Término:</dt>
        <dd>
            @Html.DisplayFor(model => model.EndTime)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <br />
        <br />
        <a asp-action="Index">Voltar para lista</a>
    </form>
</div>
