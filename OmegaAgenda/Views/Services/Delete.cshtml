@model OmegaAgenda.Models.Service

@{
    ViewData["Title"] = "Excluir Serviço";
}

<h2>@ViewData["Title"]</h2>

<h4>Você tem certeza que deseja apagar este serviço?</h4>
<div>    
    <hr />
    <dl class="dl-horizontal">
        <dt>Nome do Serviço: </dt>
        <dd>
            @Html.DisplayFor(model => model.ServiceName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
    </form>
</div>
<br />
<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

